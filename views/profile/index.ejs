<div class="profile-env">

  <header class="row">

    <div class="col-sm-2">
        <label for="cropit-image-input" class="profile-picture">
            <img src="/images/profile-picture.png" class="img-responsive img-circle" id="imgUser" />
        </label>

    </div>

    <div class="col-sm-7">

      <ul class="profile-info-sections">
        <li>
          <div class="profile-name">
            <strong>
              <a href="#"><%= user.name %></a>
              <a href="#" class="user-status is-online tooltip-primary" data-toggle="tooltip" data-placement="top" data-original-title="Online"></a>
              <!-- User statuses available classes "is-online", "is-offline", "is-idle", "is-busy" -->
            </strong>
          </div>
        </li>

        <li>
          <div class="profile-stat">
            <h3>643</h3>
            <span><a href="#">followers</a></span>
          </div>
        </li>

        <li>
          <div class="profile-stat">
            <h3>108</h3>
            <span><a href="#">following</a></span>
          </div>
        </li>
      </ul>

    </div>

    <div class="col-sm-3">

      <div class="profile-buttons">
        <a href="#" class="btn btn-default">
          <i class="entypo-user-add"></i>
          Follow
        </a>

        <a href="#" class="btn btn-default">
          <i class="entypo-mail"></i>
        </a>
      </div>
    </div>

  </header>

  <section class="profile-info-tabs">

    <div class="row">

      <div class="col-sm-offset-2 col-sm-10">

        <ul class="user-details">
          <li>
            <a href="#">
              <i class="entypo-location"></i>
              Prishtina
            </a>
          </li>
          <% if(user.job != null){ %>
          <li>
            <a href="#">
              <i class="entypo-suitcase"></i>
              Works as <span><%= user.job %></span>
            </a>
          </li>
          <% } %>
          <li>
            <a href="#">
              <i class="entypo-calendar"></i>
              16 October
            </a>
          </li>
        </ul>


        <!-- tabs for the profile links -->
        <ul class="nav nav-tabs bordered"><!-- available classes "bordered", "right-aligned" -->
          <li class="active">
            <a href="#home" data-toggle="tab">
              <span class="visible-xs"><i class="entypo-home"></i></span>
              <span class="hidden-xs"><%= __("Personal info") %></span>
            </a>
          </li>
          <li>
            <a href="#profile" data-toggle="tab">
              <span class="visible-xs"><i class="entypo-user"></i></span>
              <span class="hidden-xs">Profile</span>
            </a>
          </li>
          <li>
            <a href="#messages" data-toggle="tab">
              <span class="visible-xs"><i class="entypo-mail"></i></span>
              <span class="hidden-xs">Messages</span>
            </a>
          </li>
          <li>
            <a href="#settings" data-toggle="tab">
              <span class="visible-xs"><i class="entypo-cog"></i></span>
              <span class="hidden-xs">Settings</span>
            </a>
          </li>
        </ul>

      </div>

    </div>

  </section>


  <section class="profile-feed">

    <div class="tab-content">
      <div class="tab-pane active" id="home">

        <div class="panel-body">
          <div class=" col-sm-10">
            <form id="form_profile" role="form" class="form-horizontal form-groups-bordered">

              <div class="form-group">
                <label for="field-1" class="col-sm-3 control-label"><%= __("Your name") %></label>

                <div class="col-sm-5">
                  <input value="<% if(user.name!=null) {%><%= user.name %><%}%>" name="name" type="text" class="form-control" id="field-1" placeholder="<%= __("Your name") %>">
                </div>
              </div>

              <div class="form-group">
                <label for="field-2" class="col-sm-3 control-label"><%= __("Your phone") %></label>

                <div class="col-sm-5">
                  <input value="<% if(user.phone!=null) {%><%= user.phone %><%}%>" name="phone" type="text" class="form-control" id="field-1" data-mask="phone" placeholder="<%= __("Your phone") %>">
                </div>
              </div>

              <div class="form-group">
                <label for="field-3" class="col-sm-3 control-label"><%= __("Job") %></label>

                <div class="col-sm-5">
                  <input value="<% if(user.job!=null) {%><%= user.job %><%}%>" type="text" name="job" class="form-control" id="field-3" placeholder="<%= __("Job") %>">
                </div>
              </div>

              <div class="form-group">
                <label for="field-4" class="col-sm-3 control-label"><%= __("City") %></label>

                <div class="col-sm-5">

                  <select name="city" class="select2" id="field-4" data-allow-clear="true" data-placeholder="Select one city...">
                    <option></option>
                    <optgroup label="United States">
                      <option value="1">Alabama</option>
                      <option value="2">Boston</option>
                      <option value="3">Ohaio</option>
                      <option value="4">New York</option>
                      <option value="5">Washington</option>
                    </optgroup>
                  </select>

                </div>
              </div>

            </form>
          </div>
          <div class="col-sm-2 form-profile-save">
            <button type="button" class="btn btn-default btn-icon icon-left" id="save_profile">
              <%= __("Save") %>
              <i class="entypo-shareable"></i>
            </button>
          </div>
        </div>

      </div>
