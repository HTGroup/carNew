<div class="modal fade" id="modal-1">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title"><%= __("Resize Avatar") %></h4>
      </div>

      <div class="modal-body">
        <div id="image-cropper">
          <div class="cropit-image-preview-container">
            <div class="cropit-image-preview"></div>
          </div>

          <div class="slider slider-blue" id="zoomCrop" data-min="0" data-max="1800" data-value="223"></div>

          <input type="file" class="cropit-image-input" id="cropit-image-input" />
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-info" id="saveAvatar">Save changes</button>
      </div>
    </div>
  </div>
</div>
